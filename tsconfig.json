{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "build",
        "noEmitOnError": false,
        "experimentalDecorators": true,
        "sourceRoot": "src",
        "noImplicitAny": false,
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
}